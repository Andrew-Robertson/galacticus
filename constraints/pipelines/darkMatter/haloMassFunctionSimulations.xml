<simulations>
  <!-- Simulations to include into the dark matter halo mass function constraint pipeline -->
  <!-- Andrew Benson (01-December-2023) -->  

  <!-- For the MDPL simulations, "suites" are used to distinguish between different Rockstar versions.     -->
  <!-- This allows each to have their own detection efficiency, so that we allow for the possibility       -->
  <!-- that subtle differences between Rockstar versions lead to differences in detection efficiency.      -->
  <!-- Simulations are grouped into these suites based on the headers of their Rockstar merger tree files. -->
  <suite name="MDPL">
    <includeIsolationBias value="false"/>
    <includePerturbation  value="true" />
    <includeEnvironment   value="false"/>
    <limitMassMaximum     value="false"/>
    <group name="HugeMDPL" detectionEfficiencyClass="Rockstar1">
      <simulation name="CDM">
	<label            value="HugeMDPL"               />
	<transferFunction value="CDM"                    />
	<redshifts        value="0.000 0.490 0.987 2.028"/>
      </simulation>
    </group>
    <group name="BigMDPL" detectionEfficiencyClass="Rockstar2">
      <simulation name="CDM">
	<label            value="BigMDPL"                      />
	<transferFunction value="CDM"                          />
	<redshifts        value="0.000 0.492 1.000 2.145 2.891"/>
      </simulation>
    </group>
    <group name="MDPL2" detectionEfficiencyClass="Rockstar3">
